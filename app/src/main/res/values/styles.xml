<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="textColorAlertDialogListItem">@color/black</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="BottomNavigationTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="backgroundColor">@color/transparent_white</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="itemIconSize">72dp</item>
    </style>
    <style name="MyEditTextTheme">
        <item name="android:textColorHint">@color/black</item>
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlHighlight">@color/grey</item>

        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/black</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="CustomAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>
    <style name="EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColor">#000</item>
        <item name="android:background">#EEEEEE</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:padding">14dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
    </style>

    <style name="ProgressBarTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/quicksand_regular</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>
    <style name="NumberPicker">

        <item name="android:textSize">@dimen/_15sdp</item>
    </style>


    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#000</item>
    </style>
    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/grey</item>
    </style>
    <style name="AddCollection">
        <item name="stColorBackground">#C3D845</item>
        <item name="stFont">@font/stanberry</item>
        <item name="stTextSize">@dimen/_14sdp</item>
        <item name="stTextColor">@color/white</item>
        <item name="stLength">LONG</item>
        <item name="stGravity">top</item>
    </style>
    <style name="RemoveCollection">
        <item name="stColorBackground">#DFC553</item>
        <item name="stFont">@font/stanberry</item>
        <item name="stTextSize">@dimen/_14sdp</item>
        <item name="stTextColor">@color/white</item>
        <item name="stLength">LONG</item>
        <item name="stGravity">top</item>
    </style>
</resources>
