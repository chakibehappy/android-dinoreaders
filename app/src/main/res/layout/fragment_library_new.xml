<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/home_gradient_bg">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_to_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <include layout="@layout/top_navigation_without_search" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="45dp"
                            app:cardCornerRadius="5dp"
                            app:cardBackgroundColor="#fde7b5"
                            app:strokeWidth="2dp"
                            app:strokeColor="@color/black">
                        </com.google.android.material.card.MaterialCardView>
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="45dp"
                            app:cardCornerRadius="5dp"
                            app:cardBackgroundColor="@color/bg_blue"
                            app:strokeWidth="2dp"
                            app:strokeColor="@color/black">
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>
                    <LinearLayout
                        android:translationZ="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-43.5dp"
                        android:orientation="horizontal">
                        <com.google.android.material.card.MaterialCardView
                            android:focusable="true"
                            android:clickable="true"
                            android:id="@+id/tab_books"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="45dp"
                            app:cardCornerRadius="5dp"
                            app:cardBackgroundColor="#fde7b5"
                            app:strokeWidth="0dp"
                            app:strokeColor="@color/black">

                            <gibbie.dino.readers.customlayout.OutlineTextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                app:textSize="22dp"
                                app:strokeWidth="2.5dp"
                                app:textFillColor="@color/white"
                                app:text="Books"/>

                        </com.google.android.material.card.MaterialCardView>
                        <com.google.android.material.card.MaterialCardView
                            android:focusable="true"
                            android:clickable="true"
                            android:id="@+id/tab_collections"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="45dp"
                            app:cardCornerRadius="5dp"
                            app:cardBackgroundColor="#58cefe"
                            app:strokeWidth="2dp"
                            android:layout_marginTop="-1.5dp"
                            app:strokeColor="@color/black">
                            <gibbie.dino.readers.customlayout.OutlineTextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                app:textSize="22dp"
                                app:strokeWidth="2dp"
                                app:textFillColor="@color/white"
                                app:text="Collections"/>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_marginTop="-5dp"
                        android:id="@+id/ll_book_section"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:strokeWidth="0dp"
                        app:strokeColor="@color/black"
                        android:background="@color/book_tab"
                        app:cardCornerRadius="0dp"
                        android:paddingTop="20dp"
                        android:orientation="vertical">
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginBottom="10dp"
                            app:cardCornerRadius="@dimen/_5sdp"
                            app:cardBackgroundColor="#ee6f7c">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="4dp"
                                android:paddingBottom="4dp"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="-3dp"
                                        android:layout_marginHorizontal="@dimen/_10sdp"
                                        android:text="Favourites"
                                        android:fontFamily="@font/ruddy_black"
                                        android:textColor="@color/white"
                                        android:textSize="20sp"/>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:translationZ="@dimen/_20sdp"
                                        android:layout_marginHorizontal="3dp"
                                        android:layout_marginTop="-2dp"
                                        android:layout_height="2dp"
                                        android:background="@color/white"/>
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_books_favourite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:listitem="@layout/own_story_book_item"/>


                        <androidx.cardview.widget.CardView
                            android:layout_marginTop="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            app:cardCornerRadius="@dimen/_5sdp"
                            app:cardBackgroundColor="#7c70de">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="4dp"
                                android:paddingBottom="4dp"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="-3dp"
                                        android:layout_marginHorizontal="@dimen/_10sdp"
                                        android:text="Your Created Books"
                                        android:fontFamily="@font/ruddy_black"
                                        android:textColor="@color/white"
                                        android:textSize="20sp"/>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:translationZ="@dimen/_20sdp"
                                        android:layout_marginHorizontal="3dp"
                                        android:layout_marginTop="-2dp"
                                        android:layout_height="2dp"
                                        android:background="@color/white"/>
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_created_books"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:listitem="@layout/own_story_book_item"/>
                    </LinearLayout>

                    <LinearLayout
                        android:visibility="visible"
                        android:layout_marginTop="-5dp"
                        android:id="@+id/ll_collection_section"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/collection_tab"
                        app:cardCornerRadius="0dp"
                        android:paddingTop="20dp"
                        android:orientation="vertical">
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            app:cardCornerRadius="@dimen/_5sdp"
                            app:cardBackgroundColor="#01a5f0">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="4dp"
                                android:paddingBottom="4dp"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <TextView
                                        android:id="@+id/books_category"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="-3dp"
                                        android:layout_marginHorizontal="@dimen/_10sdp"
                                        android:text="All Collections"
                                        android:fontFamily="@font/ruddy_black"
                                        android:textColor="@color/white"
                                        android:textSize="20sp"/>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:translationZ="@dimen/_20sdp"
                                        android:layout_marginHorizontal="3dp"
                                        android:layout_marginTop="-2dp"
                                        android:layout_height="2dp"
                                        android:background="@color/white"/>
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_all_collections"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:listitem="@layout/collection_books_item"/>


                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_your_collection"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            app:cardCornerRadius="@dimen/_5sdp"
                            app:cardBackgroundColor="#5f278c">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="4dp"
                                android:paddingBottom="4dp"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="-3dp"
                                        android:layout_marginHorizontal="@dimen/_10sdp"
                                        android:text="Your Collections"
                                        android:fontFamily="@font/ruddy_black"
                                        android:textColor="@color/white"
                                        android:textSize="20sp"/>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:translationZ="@dimen/_20sdp"
                                        android:layout_marginHorizontal="3dp"
                                        android:layout_marginTop="-2dp"
                                        android:layout_height="2dp"
                                        android:background="@color/white"/>
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_my_collections"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:listitem="@layout/collection_books_item"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <LinearLayout
            android:id="@+id/ll_collection_details"
            android:visibility="gone"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#99FFFFFF">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="80dp"
                 android:elevation="10dp"
                android:layout_marginBottom="25dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="10dp"
                    app:contentPadding="10dp"
                    app:cardBackgroundColor="@color/white"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!--Collection Details Name-->
                            <androidx.cardview.widget.CardView
                                android:id="@+id/cv_collection_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardBackgroundColor="#04aef5"
                                android:layout_marginLeft="5dp"
                                app:cardCornerRadius="@dimen/_5sdp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:paddingHorizontal="4dp"
                                    android:paddingBottom="4dp">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/tv_collection_name"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginHorizontal="@dimen/_10sdp"
                                            android:layout_marginTop="-3dp"
                                            android:fontFamily="@font/ruddy_black"
                                            android:text="Collections name"
                                            android:textColor="@color/white"
                                            android:textSize="20sp" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="2dp"
                                            android:layout_marginHorizontal="3dp"
                                            android:layout_marginTop="-2dp"
                                            android:background="@color/white"
                                            android:translationZ="@dimen/_20sdp" />
                                    </LinearLayout>

                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right">
                                <ImageView
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:id="@+id/btn_close"
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:src="@drawable/close_icon"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_collections_detail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                                app:spanCount="3"
                                tools:itemCount="8"
                                tools:listitem="@layout/collections_detail_book_item"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:paddingVertical="5dp">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/quiz_button_yellow">
                                <gibbie.dino.readers.customlayout.OutlineTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:text="Add to Library"
                                    app:textSize="16dp"
                                    app:strokeWidth="2dp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>