<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_tv_rl_input_name"
    android:layout_marginTop="@dimen/_15sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksand_bold"
        android:textColor="@color/white"
        android:textSize="@dimen/_16sdp"
        android:layout_alignParentLeft="true"
        android:text="@string/name" />
    <LinearLayout
        android:id="@+id/item_tv_ll_input_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_tv_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_bold"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp"
            android:paddingBottom="@dimen/_15sdp"
            android:layout_alignRight="@id/edit_name"
            />
        <ImageView
            android:id="@+id/item_tv_iv_edit_name"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/edit"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_alignBottom="@+id/item_tv_ll_input_name"
        android:background="@android:color/white"/>
</RelativeLayout>