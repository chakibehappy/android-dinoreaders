<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item_edit"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_edit"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_tv_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_bold"
            android:textColor="@color/white"
            android:layout_weight="0.3"
            android:textSize="@dimen/_16sdp"
            android:text="@string/name" />
        <EditText
            android:id="@+id/item_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_32sdp"
            android:background="@drawable/edit_text_bg"
            android:fontFamily="@font/quicksand_bold"
            android:hint="@string/name"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorEt"
            android:textColorHighlight="@color/bg_color1"
            android:textColorHint="@color/colorEtHint"
            android:textSize="@dimen/_16sdp"
            android:layout_weight="1"
            android:paddingStart="@dimen/_16sdp"
            android:theme="@style/MyEditTextTheme" />
        <ImageView
            android:id="@+id/item_save"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:src="@drawable/edit"
            />
    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_alignBottom="@+id/ll_edit"
            android:background="@android:color/white"/>

</RelativeLayout>