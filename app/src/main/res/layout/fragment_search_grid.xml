<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg">


    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_to_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_5sdp">
                <LinearLayout
                    android:id="@+id/ll_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/backarrow" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/et_search"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_50sdp"
                        android:background="@drawable/search_bar"
                        android:fontFamily="@font/quicksand_bold"
                        android:hint="@string/search"
                        android:inputType="textEmailAddress"
                        android:layout_weight="1"
                        android:paddingStart="@dimen/_50sdp"
                        android:paddingTop="@dimen/_2sdp"
                        android:textColor="@color/colorEt"
                        android:textColorHighlight="@color/bg_color1"
                        android:textColorHint="@color/colorEtHint"
                        android:textSize="@dimen/_16sdp"
                        android:theme="@style/MyEditTextTheme" />
<!--                        <LinearLayout-->
<!--                            android:id="@+id/ll_search"-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:orientation="vertical"-->
<!--                            android:paddingStart="@dimen/_5sdp"-->
<!--                            android:layout_gravity="center">-->
<!--                            <ImageView-->
<!--                                android:layout_width="@dimen/_25sdp"-->
<!--                                android:layout_height="@dimen/_25sdp"-->
<!--                                android:src="@drawable/search"/>-->
<!--                        </LinearLayout>-->
                </LinearLayout>

            </LinearLayout>

            <GridView
                android:id="@+id/gridView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:columnWidth="@dimen/_100sdp"
                android:dividerHeight="@dimen/_30sdp"
                android:gravity="center|bottom"
                android:horizontalSpacing="@dimen/_10sdp"

                android:numColumns="2"
                android:paddingTop="@dimen/_4sdp"

                android:paddingBottom="15dp"
                android:verticalSpacing="@dimen/_10sdp" />

        </LinearLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</FrameLayout>