<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:app1="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_12sdp"
    android:orientation="vertical"
    android:elevation="100dp"
    app:ignore="NamespaceTypo"
    android:focusable="true"
    android:clickable="true">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_gravity="center"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <ImageView
            android:id="@+id/hero_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/book_1" />
        <RelativeLayout
            android:id="@+id/rl_read_to_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start">

            <ImageView
                android:id="@+id/iv_read_to_me"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp" />
        </RelativeLayout>
        <RelativeLayout
            android:focusable="true"
            android:clickable="true"
            android:id="@+id/rl_favourite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end">

            <ImageView
                android:id="@+id/iv_favourite_icon"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_margin="@dimen/_5sdp"
                android:src="@drawable/heart" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/book_name"
        android:layout_width="@dimen/_95sdp"
        android:layout_height="wrap_content"
        android:text="30 must read children book"
        android:textColor="#396fa2"
        android:fontFamily="@font/ruddy_bold"
        android:layout_marginVertical="5dp"
        android:textSize="14sp" />

<!--    <LinearLayout-->
<!--        android:id="@+id/ll_reading_level"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:orientation="horizontal">-->

<!--    </LinearLayout>-->
</LinearLayout>